

[Unit]
Description=A Java-based CMS and application framework
After=syslog.target network.target auditd.service

[Service]
Environment=STALLION_HOST={{host}}
Environment=STALLION_DOMAIN={{domain}}
Environment=STALLION_DEPLOY_TIME={{now_stamp}}
User=stallionServer
Group=stallion
ExecStart={{root}}/{{deploying}}/bin/{{executable_name}} serve -targetPath={{root}}/{{deploying}} -port={{port}} -env={{env}}
Restart=on-failure

[Install]
WantedBy=multi-user.target
